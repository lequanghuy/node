#!/usr/bin/env bash
# bin/compile BUILD_DIR CACHE_DIR ENV_DIR

BUILD_DIR=$1
CACHE_DIR=$2

DESTINATION=$BUILD_DIR/app


curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.38.0/install.sh | bash


# Activate NVM
export NVM_DIR="$DESTINATION/.nvm"
source "$NVM_DIR/nvm.sh"

nvm --version

# Install Node.js
nvm install --lts

# Verify Node.js and npm installation
echo "Node.js version:"
node --version

echo "Success!"
which node

npm install